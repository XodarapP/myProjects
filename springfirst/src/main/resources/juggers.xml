<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop.xsd"
        default-init-method="turnOnLights"
        default-destroy-method="turnOffLights">
    <context:annotation-config/>
    <context:component-scan base-package="com.springinaction.juggers"/>

    <bean id="audience" class="com.springinaction.juggers.Audience"/>

    <aop:config>
        <!-- Определение совета, который будет внедрятся в точки сопряжения -->
        <aop:aspect ref="audience">
            <!-- Определение среза множества точек сопряжения -->
            <aop:pointcut id="performance" expression="execution(* com.springinaction.juggers.performers.Performer.perform(..))"/>

            <!-- Определение точек сопряжения и советов -->
            <aop:before pointcut-ref="performance" method="takeSeats"/> <!-- performance - ссылка на именованый срез -->
            <aop:before pointcut-ref="performance" method="turnOffCellPhones"/>
            <aop:after-returning pointcut-ref="performance" method="applaud"/>
            <aop:after-throwing pointcut-ref="performance" method="demandRefund"/>
        </aop:aspect>
    </aop:config>

    <bean id="ticket" class="com.springinaction.juggers.Ticket" scope="prototype"/>

    <bean id="poeticJuggler" class="com.springinaction.juggers.performers.PoeticJuggler">
        <constructor-arg value="15"/>
        <constructor-arg>
            <bean class="com.springinaction.juggers.Sonet29"/>
        </constructor-arg>

    </bean>

    <!-- Создание единичного экземпляра класса "одиночка"  singletone -->
    <bean id="theStage" class="com.springinaction.juggers.Stage"
    factory-method="getInstance"/>

    <bean id="instrument" class="com.springinaction.juggers.instruments.Saxophone"/>

    <!-- Использование @autowire для автоматического связывания -->
    <bean id="kenny" class="com.springinaction.juggers.performers.Instrumentalist"
          p:song="Jingle Bells"
          p:instrument-ref="guitar"/>

    <!-- Использвание коллекции map для заполнения instruments -->
    <bean id="guitar" class="com.springinaction.juggers.instruments.Guitar"></bean>
    <bean id="harmonica" class="com.springinaction.juggers.instruments.Harmonica"/>

    <bean id="hank" class="com.springinaction.juggers.performers.OneManBand">
        <property name="instruments">
            <map>
                <entry key="GUITAR" value-ref="guitar"/>
                <entry key="SAXOPHONE" value-ref="instrument"/>
                <entry key="HARMONICA" value-ref="harmonica"/>
            </map>
        </property>
    </bean>

    <!-- Использование ссылки на объект kenny.song в объекте karl  -->
    <bean id="karl" class="com.springinaction.juggers.performers.Instrumentalist">
        <property name="song" value="Jingle Bells"/>
        <property name="instrument" ref="guitar"/>
    </bean>

</beans>